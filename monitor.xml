<monitor>
    <name>LicenseMonitor</name>
    <type>managed</type>
    <description>Monitor hours for license expiration date</description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <name>Run</name>
        <type>executable</type>
        <task-arguments>
        </task-arguments>
        <executable-task>
            <type>file</type>
            <file os-type="linux">license-monitor-linux-64</file>
            <file os-type="mac">license-monitor-osx</file>
            <file os-type="windows">license-monitor-windows-x86.exe</file>
        </executable-task>
    </monitor-run-task>
</monitor>